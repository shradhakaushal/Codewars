    "def pig_it(text):\n",
    "    t1 = text.split(' ')\n",
    "    ans = []\n",
    "    for i in t1:\n",
    "        if i[:-2] + i[:-1] != 'ay' and i[0].isalpha():\n",
    "            temp = i[1:] + i[0] + 'ay'\n",
    "            ans.append(temp)\n",
    "        else:\n",
    "            ans.append(i)\n",
    "    return ' '.join(ans)"
   ]
  }
